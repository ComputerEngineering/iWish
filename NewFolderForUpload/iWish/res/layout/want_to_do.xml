<RelativeLayout
    
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_want_to_do">


     <android.support.v4.view.ViewPager
 	 	xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/view_pager_to_do"
 		android:layout_width="match_parent"
 		android:layout_height="300dp" 
 		android:layout_marginTop="285dp"
        />
     
     <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:padding="10dip"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="555dp"
        app:radius="4dp"
        app:fillColor="@color/bianco"
        app:pageColor="@color/sfondo_ind_grigio"
        app:strokeWidth="0dp" />
     
     <ImageButton
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="583dp"  
		android:src="@drawable/botton_done"/>
     

     </RelativeLayout>
     
