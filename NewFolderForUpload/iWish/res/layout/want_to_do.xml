<RelativeLayout
    
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_gender"
>

      <ImageView 
		android:id="@+id/testa_want_to_do"
		android:src="@drawable/testa_want_to_do"
        android:layout_width="match_parent"
    	android:layout_height="275dp"

	  />
      
      <ImageButton 
        android:id="@+id/chiudi_verde2"
        android:src="@drawable/icona_chiudi2"
        android:background="@color/sfondo"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="310dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      />       

     <android.support.v4.view.ViewPager
 	 	xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/view_pager_avatar"
 		android:layout_width="match_parent"
 		android:layout_height="fill_parent" 
 		android:layout_marginTop="287dp"
        />
     
     <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:padding="10dip"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="550dp"
        app:radius="4dp"
        app:fillColor="@color/bianco"
        app:pageColor="@color/sfondo_ind_grigio"
        app:strokeWidth="0dp" />
     

     </RelativeLayout>