
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
    	xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
    
    <ImageView
        android:id="@+id/testa_forgot"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:src="@drawable/testa_forgot" />
    
    <ImageView
       	android:id="@+id/corpo_forgot"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_marginTop="199dp"
       	android:src="@drawable/corpo_forgot2" />
    
    <EditText
    	android:id="@+id/editTextForgot1"
    	android:layout_width="wrap_content"
    	android:layout_height="35dp"
    	android:layout_marginLeft="70dp"
    	android:layout_marginTop="240dp"
    	android:ems="10"
    	android:inputType="textEmailAddress" >
    	<requestFocus />
    </EditText>

    <Spinner
    	android:id="@+id/spinnerQuestion"
    	android:layout_width="wrap_content"
    	android:layout_height="40dp"
    	android:layout_marginTop="335dp"
    	android:layout_marginLeft="70dp"
    	android:entries="@array/question" />

    <EditText
    	android:id="@+id/editText1"
    	android:layout_width="wrap_content"
    	android:layout_height="35dp"
    	android:layout_marginTop="435dp"
    	android:layout_marginLeft="70dp"
    	android:ems="10" />
    
   <Button 
        android:id="@+id/bt_oksend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="577dp"
	    android:background="@drawable/m_bot_send_psw2"/>
    
    
</RelativeLayout>



