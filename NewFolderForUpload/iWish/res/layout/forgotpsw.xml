<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/testa_forgot"
        android:layout_width="360dp"
        android:layout_height="198dp"
        android:src="@drawable/testa_forgot" />

	<RelativeLayout 
   		 android:layout_width="match_parent"
   		 android:layout_height="match_parent"   
 	>
    
    		<ImageView
       			 android:id="@+id/corpo_forgot"
       			 android:layout_width="360dp"
       			 android:layout_height="343dp"
       			 android:src="@drawable/corpo_forgot" />

    		<EditText
    		    android:id="@+id/editTextForgot1"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:layout_alignParentRight="true"
    		    android:layout_alignParentTop="true"
    		    android:layout_marginRight="50dp"
    		    android:layout_marginTop="39dp"
    		    android:ems="10"
    		    android:inputType="textEmailAddress" >

    		    <requestFocus />
    		</EditText>

    		<Spinner
    		    android:id="@+id/spinnerQuestion"
    		    android:layout_width="wrap_content"
    		    android:layout_height="50dp"
    		    android:layout_alignLeft="@+id/editTextForgot1"
    		    android:layout_alignRight="@+id/editTextForgot1"
    		    android:layout_centerVertical="true"
    		    android:entries="@array/question"
    		     />

    		<EditText
    		    android:id="@+id/editText1"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:layout_alignLeft="@+id/spinnerQuestion"
    		    android:layout_below="@+id/spinnerQuestion"
    		    android:layout_marginTop="41dp"
    		    android:ems="10" />

    </RelativeLayout>

    <Button 
        android:id="@+id/bt_oksend"
        android:layout_width="360dp"
	    android:layout_height="44dp"
	    android:background="@drawable/bt_oksend"
        />

</LinearLayout>