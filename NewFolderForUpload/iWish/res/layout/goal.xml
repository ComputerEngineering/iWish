<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
    android:background="@drawable/sfondo_gender"
  >
        
     <ImageView 
		android:id="@+id/testata_goal"
		android:src="@drawable/testa_goal"
        android:layout_width="match_parent"
    	android:layout_height="275dp"

	  />
     
     <ImageButton
                android:id="@+id/cinque_km"
                android:layout_width="250dp"
                android:layout_height="125dp"
                android:layout_marginTop="295dp"
                android:clickable="true" 
                android:src="@drawable/cinque_km"
                android:layout_centerHorizontal="true" />
     
          <ImageButton
                android:id="@+id/dieci_km"
                android:layout_width="250dp"
                android:layout_height="125dp"
                android:layout_marginTop="430dp"
                android:clickable="true" 
                android:src="@drawable/dieci_km"
                android:layout_centerHorizontal="true" />
          
         <ImageButton
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="577dp"  
				android:src="@drawable/botton_done"
                />
 
    
</RelativeLayout>