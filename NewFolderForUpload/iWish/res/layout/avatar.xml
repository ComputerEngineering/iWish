 <RelativeLayout
    
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_avatar"
>

      <ImageView 
		android:id="@+id/testa_avatar"
		android:src="@drawable/testa_avatar"
        android:layout_width="match_parent"
    	android:layout_height="275dp"

	  />
      
      
     <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/cerchio"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="72dp"
        android:layout_gravity="left"
        android:src="@drawable/hysen"
        app:border_color="@color/cerchio_imm"
        app:border_width="1dp"
        app:shadow="true" />
      

     <android.support.v4.view.ViewPager
 	 	xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/view_pager_avatar"
 		android:layout_width="match_parent"
 		android:layout_height="300dp" 
 		android:layout_marginTop="279dp"
        />
     
     <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator2"
        android:padding="10dip"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="548dp"
        app:radius="4dp"
        app:fillColor="@color/bianco"
        app:pageColor="@color/sfondo_ind_grigio"
        app:strokeWidth="0dp" />
     
           <ImageButton
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="577dp"  
		android:src="@drawable/botton_done"/>
   

     </RelativeLayout>
     
