 <RelativeLayout
    
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_avatar"
>

      <ImageView 
		android:id="@+id/testa_avatar"
		android:src="@drawable/testa_avatar"
        android:layout_width="match_parent"
    	android:layout_height="275dp"

	  />
      
      <ImageButton 
        android:id="@+id/freccia_verde_sin"
        android:src="@drawable/freccia_verde_sin"
        android:background="#39E565"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
      
     <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/cerchio"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="72dp"
        android:layout_gravity="left"
        android:src="@drawable/hysen"
        app:border_color="#034419"
        app:border_width="1dp"
        app:shadow="true" />
      

     <android.support.v4.view.ViewPager
 	 	xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/view_pager_avatar"
 		android:layout_width="match_parent"
 		android:layout_height="fill_parent" 
 		android:layout_marginTop="287dp"
        />
     
     <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator2"
        android:padding="10dip"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="550dp"
        app:radius="4dp"
        app:fillColor="#FFFFFF"
        app:pageColor="#E0E0E0"
        app:strokeWidth="0dp" />
     

     </RelativeLayout>
 