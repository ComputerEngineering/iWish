 <RelativeLayout
    
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_iwish"
>

      <ImageView 
		android:id="@+id/testata_calendar"
		android:src="@drawable/testa_calendar2"
        android:layout_width="match_parent"
    	android:layout_height="275dp"

	  />
      
      <ImageButton 
        android:id="@+id/bott_omino"
        android:src="@drawable/omino"
        android:background="#39E565"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
     
      <ImageButton
        android:id="@+id/today"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="218dp"
        android:layout_marginLeft="20dp"
        android:clickable="true" 
        android:src="@drawable/bot_today"
    />
      
      <ImageButton
        android:id="@+id/week"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="218dp"
        android:layout_marginLeft="135dp"
        android:clickable="true" 
        android:src="@drawable/bot_week"
         />
      
      <ImageButton
        android:id="@+id/month"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="218dp"
        android:layout_marginLeft="250dp"
        android:clickable="true" 
        android:src="@drawable/bott_month"
        />
   
</RelativeLayout>