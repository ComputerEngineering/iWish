<RelativeLayout 

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
 >   
    
     <ImageView 
		android:id="@+id/testata_height"
		android:src="@drawable/testa_height"
        android:layout_width="match_parent"
    	android:layout_height="199dp"

	  />
    
      <ImageButton 
        android:id="@+id/freccia_verde_sin"
        android:src="@drawable/freccia_verde_sin"
        android:background="#39E565"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
      
     <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/cerchio"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="72dp"
        android:layout_gravity="left"
        android:src="@drawable/hysen"
        app:border_color="#034419"
        app:border_width="1dp"
        app:shadow="true" />
    
    
    </RelativeLayout>