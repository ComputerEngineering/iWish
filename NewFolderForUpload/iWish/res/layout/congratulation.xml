<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_congratulation" >

 <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/civ_cerchio"
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:src="@drawable/hysen"
        app:border_color="@color/verde_scuro"
        app:border_width="1dp"
        app:shadow="true" /> 
    
    <ImageView
        android:id="@+id/omino_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="315dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/omino_avatar_attivo" />
    
    <!-- 
    android:src="@drawable/omino_avatar_pigro2"
     -->
    
    <ImageView
        android:id="@+id/scritta_omino"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="110dp"
        android:src="@drawable/scritta_attivo" /> 
<!-- 
    android:src="@drawable/scritta_pigro" 
 -->       
    
    
    <ImageView
        android:id="@+id/sfondo_bmi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/sfondo_bmi5" />    
        
    <TextView
        android:id="@+id/bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="465dp"
        android:layout_marginLeft="42dp"
        android:text="24,5"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/bianco"
         />

      <ImageView
        android:id="@+id/scritta_bmii"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="110dp"
        android:src="@drawable/scritta_bmi2" />     
    


    <ImageButton
        android:id="@+id/img_bt_expressWish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="585dp"
        android:src="@drawable/m_bot_express_wish" />






</RelativeLayout>


