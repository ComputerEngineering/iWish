
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:background="@drawable/sfondo_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
   <ImageView
         android:id="@+id/img_genio"
         android:layout_width="150dp"
         android:layout_height="150dp"
	     android:layout_marginTop="75dp"
         android:layout_centerHorizontal="true"
         android:src="@drawable/img_genio" />
    
    
    
     <ImageView
         
         android:id="@+id/scritta_genio"
         android:layout_width="match_parent"
         android:layout_height="150dp"
         android:layout_marginTop="225dp"
         android:src="@drawable/scritta_genio" />

     <ImageButton
         android:id="@+id/bot_remind"
         android:layout_width="202dp"
         android:layout_height="47dp"
         android:layout_marginTop="350dp"
         android:layout_centerHorizontal="true"
         android:src="@drawable/bot_remind" />
     
      <ImageButton
         android:id="@+id/bot_postpone_tomorrow"
         android:layout_width="202dp"
         android:layout_height="47dp"
         android:layout_marginTop="400dp"
         android:layout_centerHorizontal="true"
         android:src="@drawable/bot_postpone_tomorrow" />
      
      <ImageButton
         android:id="@+id/bot_go_back"
         android:layout_width="202dp"
         android:layout_height="47dp"
         android:layout_marginTop="450dp"
         android:layout_centerHorizontal="true"
         android:src="@drawable/bot_go_back" />

</RelativeLayout>