<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scv_friends"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/testata_friends"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/testa_friends" />

        <ImageView
            android:id="@+id/corpo_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/testata_friends"
            android:src="@drawable/body_friends"
             />

        <ListView
            android:id="@+id/lstv_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/corpo_friends"
            android:layout_centerHorizontal="true" >

        </ListView>

        <SearchView
            android:id="@+id/searc_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgbt_searcByPoints"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp" >
        </SearchView>

        <ImageButton
            android:id="@+id/imgbt_searcByName"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/imgbt_searcByLatest"
            android:layout_marginLeft="29dp"
            android:background="#39E565"
            android:src="@drawable/sort_by_name" />

        <ImageButton
            android:id="@+id/imgbt_searcByLatest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgbt_searcByPoints"
            android:layout_centerHorizontal="true"
            android:background="#39E565"
            android:src="@drawable/sort_by_latest" />

        <ImageButton
            android:id="@+id/imgbt_searcByPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/testata_friends"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="45dp"
            android:background="#39E565"
            android:src="@drawable/sort_by_points" />
        
    </RelativeLayout>
  
</ScrollView>