<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/testa_profile"
    android:gravity="right" >

    <ImageButton
        android:id="@+id/imageUser_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/bt_profile"
        android:background="#39E565" />

    <QuickContactBadge
        android:id="@+id/quickContactBadge_profile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:id="@+id/textView_points_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_wishes_profile"
        android:layout_alignBottom="@+id/textView_wishes_profile"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_level_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_points_profile"
        android:layout_alignBottom="@+id/textView_points_profile"
        android:layout_alignParentRight="true"
        android:layout_marginRight="56dp"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton1"
        android:layout_marginBottom="37dp"
        android:layout_toLeftOf="@+id/textView_level_profile"
        android:src="@drawable/bt_wishlist"
        android:background="#39E565" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton3"
        android:layout_alignRight="@+id/imageButton1"
        android:src="@drawable/bt_calendar" 
        android:background="#39E565"/>

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_wishes_profile"
        android:layout_alignLeft="@+id/textView_wishes_profile"
        android:background="#39E565"
        android:src="@drawable/bt_sounds" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_toRightOf="@+id/imageButton3"
        android:background="#39E565"
        android:src="@drawable/bt_options" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageUser_profile"
        android:layout_marginBottom="58dp"
        android:layout_toRightOf="@+id/textView_wishes_profile"
        android:background="#39E565"
        android:src="@drawable/bt_statistics" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton3"
        android:layout_toLeftOf="@+id/imageButton5"
        android:background="#39E565"
        android:src="@drawable/bt_friends" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@+id/imageButton4"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView_wishes_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/quickContactBadge_profile"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="96dp"
        android:text="TextView" />

</RelativeLayout>