<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:background="@drawable/sfondo_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
   <ImageView
         android:id="@+id/img_orologio"
         android:layout_width="150dp"
         android:layout_height="150dp"
	     android:layout_marginTop="75dp"
         android:layout_centerHorizontal="true"
         android:src="@drawable/img_orologio" />
    
    
    
     <ImageView
         
         android:id="@+id/scritta_ora"
         android:layout_width="match_parent"
         android:layout_height="150dp"
         android:layout_marginTop="225dp"
         android:src="@drawable/scritta_ora" />

     <ImageButton
         android:id="@+id/bot_oh_yes"
         android:layout_width="202dp"
         android:layout_height="47dp"
         android:layout_marginTop="400dp"
         android:layout_centerHorizontal="true"
         android:src="@drawable/bot_oh_yes" />
     
      <ImageButton
         android:id="@+id/bot_not_today"
         android:layout_width="202dp"
         android:layout_height="47dp"
         android:layout_marginTop="450dp"
         android:layout_centerHorizontal="true"
         android:src="@drawable/bot_not_today" />

</RelativeLayout>