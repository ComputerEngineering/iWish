<RelativeLayout    
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_iwish"
>

      <ImageView 
		android:id="@+id/testata_statistics"
		android:src="@drawable/testa_statistics"
        android:layout_width="match_parent"
    	android:layout_height="275dp"

	  />
      
      <ImageButton 
        android:id="@+id/bott_omino"
        android:src="@drawable/omino"
        android:background="@color/sfondo"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
      
      <ImageButton
        android:id="@+id/bot_body"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="30dp"
        android:clickable="true" 
        android:src="@drawable/bot_body"
        />
     
      <ImageButton
        android:id="@+id/bot_activity"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="145dp"
        android:clickable="true" 
        android:src="@drawable/bot_activity"
    />
      
      <ImageButton
        android:id="@+id/bot_badges"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="250dp"
        android:clickable="true" 
        android:src="@drawable/bot_badges"
         />
    
<LinearLayout 
    android:id="@+id/layout_list"
 android:layout_marginTop="273dp"
 android:layout_width="match_parent"
 android:layout_height="match_parent"
 android:orientation="vertical"
 android:visibility="invisible" >
 
<ListView
 android:id="@+id/list"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:layout_gravity="center"
 android:divider="#DDDDDD"
 android:dividerHeight="3dip"
 android:background="@color/bianco" />
 
</LinearLayout>

</RelativeLayout>
