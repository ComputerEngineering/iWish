<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView_login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/testata_login"
            android:layout_width="match_parent"
            android:layout_height="199dp"
            android:src="@drawable/testa_login" />

        <ImageView
            android:id="@+id/corpo_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/body_login" />

        <EditText
            android:id="@+id/edtx_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/testata_login"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textEmailAddress" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/edtx_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edtx_username"
            android:layout_below="@+id/edtx_username"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:inputType="textPassword" />

        <ImageButton
            android:id="@+id/imgbt_ok_go"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/edtx_password"
            android:src="@drawable/bt_ok_go" />

        <ImageButton
            android:id="@+id/imgbt_forgot_psw"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imgbt_ok_go"
            android:src="@drawable/bt_forgot_pass" />

        <ImageButton
            android:id="@+id/imgbt_register_done"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="72dp"
            android:background="#39E565"
            android:src="@drawable/bt_register" />

        <ImageButton
            android:id="@+id/imgbt_tw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgbt_fb"
            android:layout_centerHorizontal="true"
            android:background="#39E565"
            android:src="@drawable/bt_tw" />

        <ImageButton
            android:id="@+id/imgbt_gm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgbt_tw"
            android:layout_marginLeft="218dp"
            android:layout_toRightOf="@+id/imgbt_tw"
            android:background="#39E565"
            android:src="@drawable/bt_gm" />

        <ImageButton
            android:id="@+id/imgbt_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imgbt_forgot_psw"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="33dp"
            android:background="#39E565"
            android:src="@drawable/bt_fb" />

    </RelativeLayout>

</ScrollView>