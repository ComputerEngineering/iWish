<RelativeLayout
    
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_wishlist"
>
   
      <ImageButton 
        android:id="@+id/bott_omino"
        android:src="@drawable/omino"
        android:background="#39E565"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
     
      <TextView
        android:id="@+id/ongoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="238dp"
        android:text="ongoing"
        android:textSize="15sp"
        android:textColor="@color/placeholder" />
      
      <TextView
        android:id="@+id/finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="238dp"
        android:text="finished"
        android:textSize="15sp"
        android:textColor="@color/placeholder" />   
      
      <TextView
        android:id="@+id/challenges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="238dp"
        android:text="challenges"
        android:textSize="15sp"
        android:textColor="@color/placeholder" />   
      
   <TextView
        android:id="@+id/textView_ongoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="210dp"
        android:text="5"
        android:textSize="25sp"
        android:textColor="@color/placeholder" />
    
    
    <TextView
        android:id="@+id/textView_finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_centerHorizontal="true"
        android:text="4"
        android:textSize="25sp"
        android:textColor="@color/placeholder" />

    <TextView
        android:id="@+id/textView_challenges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="210dp"
        android:text="2"
        android:textSize="25sp"
        android:textColor="@color/placeholder" />
      
   
</RelativeLayout>

