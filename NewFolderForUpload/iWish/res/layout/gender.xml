<RelativeLayout
    
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_gender"
>

      <ImageView 
		android:id="@+id/testa_gender"
		android:src="@drawable/testa_gender"
        android:layout_width="match_parent"
    	android:layout_height="275dp"

	  />
      
      <ImageButton 
        android:id="@+id/freccia_verde_sin"
        android:src="@drawable/freccia_verde_sin"
        android:background="@color/sfondo"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
      
     <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/cerchio"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="72dp"
        android:layout_gravity="left"
        android:src="@drawable/hysen"
        app:border_color="@color/verde_scuro"
        app:border_width="1dp"
        app:shadow="true" />
      

     
     <ImageButton
                android:id="@+id/maschio"
                android:layout_width="250dp"
                android:layout_height="125dp"
                android:layout_marginTop="295dp"
                android:clickable="true" 
                android:src="@drawable/maschio"
                android:layout_centerHorizontal="true" />
     
          <ImageButton
                android:id="@+id/femmina"
                android:layout_width="250dp"
                android:layout_height="125dp"
                android:layout_marginTop="430dp"
                android:clickable="true" 
                android:src="@drawable/femmina"
                android:layout_centerHorizontal="true" />
          
         <ImageButton
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="577dp"  
				android:src="@drawable/botton_done"
                />
     

     </RelativeLayout>