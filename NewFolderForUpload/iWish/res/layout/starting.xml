<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
    android:background="@drawable/sfondo_starting"
  >
        
     <ImageView 
		android:id="@+id/testata_starting"
		android:src="@drawable/testa_starting"
        android:layout_width="match_parent"
    	android:layout_height="275dp"

	  />
     
      <ImageButton 
        android:id="@+id/freccia_verde_sin"
        android:src="@drawable/freccia_verde_sin"
        android:background="#39E565"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
      
      <ImageButton 
        android:id="@+id/chiudi_verde2"
        android:src="@drawable/icona_chiudi2"
        android:background="#39E565"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="310dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      />    
     
     
     <ImageButton
                android:id="@+id/ready"
                android:layout_width="250dp"
                android:layout_height="125dp"
                android:layout_marginTop="295dp"
                android:clickable="true" 
                android:src="@drawable/ready"
                android:layout_centerHorizontal="true" />
     
          <ImageButton
                android:id="@+id/other_day"
                android:layout_width="250dp"
                android:layout_height="125dp"
                android:layout_marginTop="430dp"
                android:clickable="true" 
                android:src="@drawable/other_day"
                android:layout_centerHorizontal="true" />
          
         <ImageButton
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="577dp"  
				android:src="@drawable/botton_done"
                />
 
    
</RelativeLayout>
        


