<RelativeLayout 

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
    android:background="@drawable/sfondo_weight_change" >   
    
         
     <TextView
        android:id="@+id/peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="215dp"    
        android:textSize="30sp"
        android:text="kg"
        android:textColor="@color/verde_scuro" />

   <antistatic.spinnerwheel.WheelHorizontalView 
       android:id="@+id/weight_horizontal"
        app:visibleItems="1"
        app:selectionDivider="@xml/divider_dark_gradient_horizontal"
        app:selectionDividerWidth="0px"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"/>
     
     <ImageButton
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="583dp"  
		android:src="@drawable/botton_done"/>
    
    </RelativeLayout>