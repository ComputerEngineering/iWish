<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
    android:background="@drawable/sfondo_iwish"
    android:orientation="vertical" >
    
    
     <ImageView 
		android:id="@+id/testata_iwish"
		android:src="@drawable/testata_iwish"
        android:layout_width="match_parent"
    	android:layout_height="300dp"

	  />
    
          <ImageButton 
        android:id="@+id/chiudi_verde"
        android:src="@drawable/icona_chiudi"
        android:background="#39E565"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="280dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
    
         <ImageView 
		android:id="@+id/dito_iwish"
		android:src="@drawable/dito_iwish"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="300dp"
    	android:layout_centerHorizontal="true"

	  />
    
    </RelativeLayout>
    
